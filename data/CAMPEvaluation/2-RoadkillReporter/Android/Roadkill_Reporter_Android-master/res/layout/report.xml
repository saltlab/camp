<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#000000">

    <FrameLayout
            android:id="@+id/lyt_report_raccoon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@color/black"
            android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true">

        <ImageButton
                android:id="@+id/btn_report_raccoon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/raccoon_1024"
                android:layout_gravity="center"
                android:contentDescription="@string/click_raccoon_to_report"/>

        <ProgressBar
                android:id="@+id/pgrs_reporting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:visibility="gone"
                android:indeterminate="true"
                android:layout_gravity="center"/>

    </FrameLayout>

    <TextView
            android:id="@+id/txt_app_name_long"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:textSize="15pt"
            android:layout_marginTop="10dip"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:background="@color/black"
            android:text="@string/app_name_long"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
            android:id="@+id/txt_click_to_report"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:text="@string/click_raccoon_to_report"
            android:textSize="10pt"
            android:textColor="@android:color/white"/>

</RelativeLayout>