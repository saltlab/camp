<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/commonlayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <com.google.android.maps.MapView
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:apiKey="0Pvg9pZ1g3nr44lExUbdW_gE8IgOKqeTVskQB5g"
            android:clickable="true"/>

    <TextView
            android:id="@+id/txt_point_pin_to_raccoon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:gravity="center"
            android:padding="5dip"
            android:background="@color/black"
            android:textSize="30dip"
            android:text="@string/point_pin_to_raccoon"/>

    <com.calebgomer.roadkill_reporter.TouchlessImageView
            android:id="@+id/img_reporter_pin"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerInParent="true"
            android:src="@drawable/crosshair"
            android:contentDescription="@string/point_pin_to_raccoon"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_bg_selector"
                android:textSize="25dip"
                android:textColor="@color/white"
                android:text="@string/confirm"/>

        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/list_bg_selector"
                android:textSize="25dip"
                android:textColor="@color/white"
                android:text="@string/cancel"/>

    </LinearLayout>

</RelativeLayout>